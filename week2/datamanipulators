#include <iostream>
#include <iomanip>

int main() {
    std::cout << "Hello" << std::endl;
    std::cout << "World" << std::endl;

    std::cout << "Hello" << std::ends << "World" << std::endl;

    std::cout << "This is a line without newline" << std::flush;

    std::cout << std::setw(10) << "Width 10" << std::endl;

    std::cout << std::setfill('*') << std::setw(15) << "Width 15" << std::setfill(' ') << std::endl;

    double pi = 3.14159265358979323846;
    std::cout << "Pi with default precision: " << pi << std::endl;
    std::cout << "Pi with precision 3: " << std::setprecision(3) << pi << std::endl;

    return 0;
}
