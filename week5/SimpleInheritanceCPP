#include<iostream>
using namespace std;
class person{
    string name;
    int rollno;
    public:
     void details1(){
       cout<<"Enter name : "<<endl;
       cin>>name;
       cout<<"Enter rollno : "<<endl;
       cin>>rollno;
     }
     void display1(){
       cout<<"Student name : "<<name<<endl;
       cout<<"Student rollno : "<<rollno<<endl;
     }


};
class student : private person{
   int sem;
   float percentage;
   public:
   void details2(){
       details1();
       cout<<"Semester : "<<endl;
       cin>>sem;
       cout<<"enter percentage : "<<endl;
       cin>>percentage;
   }
   void display2(){
       display1();
       cout<<"Semester : "<<sem<<endl;
       cout<<"percentage : "<<percentage<<endl;
   }


};
int main(){
   student S;
   S.details2();
   S.display2();
}
